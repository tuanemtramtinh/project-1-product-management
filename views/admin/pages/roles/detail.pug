extends ../../layouts/default.pug

block main
  if (user.role_id.permissions.includes("roles_view"))
    h1 #{pageTitle}

    if (role.title)
      h1 #{role.title}

    if (role.description)
      div #{role.description}

    table(
      class="table table-hover table-sm"
      table-detail=role
    )
      thead
        tr
          th Tính năng
          th(class="text-center" role-id=role.id) #{role.title}
      tbody
        //- Tổng quan
        tr
          td(colspan="4")
            b Tổng quan
        tr(data-name="dashboard_view")
          td Xem
          td(class="text-center")
            input(type="checkbox" data-id=role.id)
        //- Hết Tổng quan
        //- Danh mục sản phẩm
        tr
          td(colspan="4")
            b Danh mục sản phẩm
        tr(data-name="products-category_view")
          td Xem
          td(class="text-center")
            input(type="checkbox" data-id=role.id)
        tr(data-name="products-category_create")
          td Thêm mới
          td(class="text-center")
            input(type="checkbox" data-id=role.id)
        tr(data-name="products-category_edit")
          td Chỉnh sửa
          td(class="text-center")
            input(type="checkbox" data-id=role.id)
        tr(data-name="products-category_delete")
          td Xóa
          td(class="text-center")
            input(type="checkbox" data-id=role.id)
        //- Hết Danh mục sản phẩm

        //- Sản phẩm
        tr
          td(colspan="4")
            b Sản phẩm
        tr(data-name="products_view")
          td Xem
          td(class="text-center")
            input(type="checkbox" data-id=role.id)
        tr(data-name="products_create")
          td Thêm mới
          td(class="text-center")
            input(type="checkbox" data-id=role.id)
        tr(data-name="products_edit")
          td Chỉnh sửa
          td(class="text-center")
            input(type="checkbox" data-id=role.id)
        tr(data-name="products_delete")
          td Xóa
          td(class="text-center")
            input(type="checkbox" data-id=role.id)
        //- Hết Sản phẩm

        //- Nhóm quyền
        tr
          td(colspan="4")
            b Nhóm quyền
        tr(data-name="roles_view")
          td Xem
          td(class="text-center")
            input(type="checkbox" data-id=role.id)
        tr(data-name="roles_create")
          td Thêm mới
          td(class="text-center")
            input(type="checkbox" data-id=role.id)
        tr(data-name="roles_edit")
          td Chỉnh sửa
          td(class="text-center")
            input(type="checkbox" data-id=role.id)
        tr(data-name="roles_delete")
          td Xóa
          td(class="text-center")
            input(type="checkbox" data-id=role.id)
        tr(data-name="roles_permissions")
          td Phân quyền
          td(class="text-center")
            input(type="checkbox" data-id=role.id)
        //- Hết Nhóm quyền

        //- Tài khoản
        tr
          td(colspan="4")
            b Tài khoản
        tr(data-name="accounts_view")
          td Xem
          
          td(class="text-center")
            input(type="checkbox" data-id=role.id)
        tr(data-name="accounts_create")
          td Thêm mới
          
          td(class="text-center")
            input(type="checkbox" data-id=role.id)
        tr(data-name="accounts_edit")
          td Chỉnh sửa
          
          td(class="text-center")
            input(type="checkbox" data-id=role.id)
        tr(data-name="accounts_delete")
          td Xóa
          
          td(class="text-center")
            input(type="checkbox" data-id=role.id)
        //- Hết Tài khoản
  else
    div Bạn không có quyền truy cập trang này :D
